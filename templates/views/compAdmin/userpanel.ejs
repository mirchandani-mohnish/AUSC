<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="/userpanel.css" type="text/css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <title>Admin</title>
</head>
<body>
    <style>
        body{
          font-family: cursive;
    
    
        }
    </style>
    <%-include('../../partials/navbar.ejs')%>
    <div id="usernavbar">
        <nav class="navbar navbar-expand-lg navbar-light secnavbar">
            <div class="container-fluid">
              
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                
                
              </div>
              <div>
                
                <a class="nav-link" href="/admin">Course Panel</a>
                
              </div>
            </div>
        </nav>
    </div>

    <div class="container-fluid justify-content-center">
        <div><h3>Users: </h3></div>
    </div>

    

    <div class="container-fluid">
        <div>
            <ul class="list-group list-group-flush">
                <% userlist.forEach(curruser => { %>
                    <div class="container border rounded m-2 p-2">
                    <li class="list-group-item border-0 m-1 p-2">
                        <p class="fw-bold fs-2"> <%=curruser.userName%></p> 
                        <form class="form-control border-0" action="/admin/userpanel/addcourse<%=curruser.userName%>" method="POST">
                            <input type="text" placeholder="Code" name="code">
                            <button type="submit" class="btn btn-danger">Submit</button>
                        </form></li>
                            <ul class="list-group list-group-horizontal mt-2 p-2">
                                <div class="container container-fluid">
                                    <div class="row">
                                        <% curruser.courses.forEach(course => { %>
                                            <li class="list-group-item rounded m-2 col-sm-4 col-md-2 col-lg-1"> <%=course %> 
                                                <a class="btn btn-danger btn-sm m-2 p-2" href="/admin/userpanel/delcourse/<%=curruser.userName%>/<%=course%>">
                                                    Delete
                                                </a>
                                            </li>
                                            

                                        <% }); %>
                                    </div>
                                </div>
                            </ul>
                        </div>
                    
                <% }); %>
            </ul>
        </div>
    </div>

      
      
    
        
    
    <script type="module" src="../js/bootstrap.min.js"></script>
</body>
</html>