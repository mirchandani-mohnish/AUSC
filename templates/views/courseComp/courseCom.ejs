<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/bootstrap.min.css">
    <title>AUSC Course Companion</title>
</head>
<body>
    <%-include('../../partials/navbar.ejs')%>
    <div id="coursenavbar">
        <nav class="navbar navbar-expand-lg navbar-light bg-red-600">
            <div class="container-fluid">
              <a class="navbar-brand" href="#">Filters</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent2" aria-controls="navbarSupportedContent2" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent2">
                
                <form class="d-flex" action="/courseComp" method="POST">
                  <input name="searchval" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                  <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
              </div>
            </div>
          </nav>

    </div>
    <div id="mycourses" class="container shadow-lg">
      <% if(typeof(mycourses) !== 'undefined'){%>
        <div class="row justify-content-center">
        <% mycourses.forEach(course => {%>
          
          <div class="card rounded-top m-2 col-3" style="width: 18rem;">
                  
            <div class="card-body">
              <h4 class="card-title"><%=course.title%></h4>
              <h5 class="card-text"><%=course.code%></h5>
              <h5 class="card-text"><%=course.faculty%></h5>
              
              <p class="card-text"><%=course.content%></p>
              <a href="#" class="btn btn-primary">View</a>
              <a href="/courseComp/deletecourse<%=course.code%>" class="btn btn-primary">Drop Course</a>
              
            </div>
          </div>
        <%});%>
        </div>
      <%}else{%>
        <div><p class="h2">No courses Selected....Sorry</p></div>
      <%}%>
    </div>
    <div class="container-fluid">
      <div class="row">
        <% allcourses.forEach(course => {%>   
          <div class="card rounded-top m-2 col-3" style="width: 18rem;">
              
              <div class="card-body">
                <h5 class="card-title"><%=course.title%></h5>
                <h5 class="card-text"><%=course.code%></h5>
                <h5 class="card-text"><%=course.faculty%></h5>
                
                <p class="card-text"><%=course.content%></p>
                <a href="#" class="btn btn-primary">View</a>
                <a href="/courseComp/selectcourse<%=course.code%>" class="btn btn-primary">Select Course</a>
                
              </div>

          </div>
          <%});%>
          
          

      </div>
    </div>  



    <script type="module" src="./js/bootstrap.min.js"></script>
</body>
</html>